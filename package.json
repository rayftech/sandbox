{
  "name": "sandbox_backend",
  "version": "1.0.0",
  "description": "Backend for the sandbox application",
  "main": "dist/index.js",
  "dependencies": {
    "amqplib": "^0.10.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "mongodb": "^6.14.1",
    "mongoose": "^8.11.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/amqplib": "^0.10.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.8",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --exec ts-node -r dotenv/config index.ts",
    "dev:debug": "nodemon --exec node --inspect -r ts-node/register -r dotenv/config index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:user-sync": "jest src/test/userSync/test_user_sync.ts",
    "test:auth-middleware": "jest src/test/userSync/test_auth_middleware.ts",
    "test:userSync": "jest src/test/userSync",
    "test:rabbitmq": "ts-node -r dotenv/config src/test/rabbitMQ/test_rabbitmq.ts",
    "test:events": "ts-node -r dotenv/config src/test/rabbitMQ/test_event_publisher.ts",
    "test:debug": "NODE_ENV=test jest --detectOpenHandles --runInBand --verbose",
    "clean": "rimraf dist",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:prune": "docker system prune -af"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*.test.ts",
      "**/test_*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "verbose": true
  }
}